<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextWelcome">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/grey_light</item>
    </style>

    <style name="TextAppName">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppDescription">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppSlogan">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomButton">
        <item name="android:textColor">@color/white</item>
        <item name="background">@drawable/shape_button</item>
    </style>

    <style name="TextTitlePage">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="noActionBar" parent="Theme.AppCompat.Light.NoActionBar" />
</resources>